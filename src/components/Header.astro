<section class="flex gap-8 flex-col justify-center items-start h-screen">
  <div class="flex flex-col">
    <div class="">SpaceRoleplay</div>
    <h1 class="text-white text-6xl font-bold">
      Le meilleur bot <br />
      <span class="text-[#623dff] hover:text-[#866bff]">RolePlay</span>
      <br /> pour Discord
    </h1>
  </div>

  <button
    class="bg-[#272934] hover:bg-[#623dff] hover:font-bold rounded-lg px-3 py-2 text-white"
  >
    <a
      href="https://discord.com/oauth2/authorize?client_id=1149044343366226051"
      target="_blank"
      rel="noopener">Ajouter au discord</a
    >
  </button>

  <div class="round"></div>
</section>

<style>
  .round {
    position: fixed;
    top: 100%;
    left: 0%;
    transform: translate(-50%, -50%);
    width: 1000px;
    height: 1000px;
    background-color: #623dff;
    border-radius: 50%;
    filter: blur(9000px);
    animation: animateSize 10s infinite alternate;
  }

  @keyframes animateSize {
    0% {
      width: 1000px;
      height: 1000px;
    }
    50% {
      width: 500px;
      height: 500px;
    }
    100% {
      width: 1000px;
      height: 1000px;
    }
  }
</style>
